package  {	import flash.geom.Point;		public class Blob extends System{		public function Blob(center:Point, divisions:Number = 18, radius:Number = 40, type:Number = 0) {			switch(type){				case 0:				   var hub:PointMass = new PointMass(1,center);					  var rad:Number = 2*Math.PI / divisions;				   addPoint(hub);				   for(var i = 0; i < divisions; i++){					   var newPoint:PointMass = new PointMass(1,new Point(center.x + radius*Math.cos(i*rad),center.y + radius*Math.sin(i*rad)));					   var toHub:Connection = new Connection(hub,newPoint,radius,0.03);					   addLink(toHub);				   }				   //now that all spokes are created, add skin				   for(i = 1; i < divisions+1; i++){					   var skin1:Connection = new Connection(this.allPoints[i],this.allPoints[wrap(i+1,divisions+1)],(rad*radius),0.03);					   var skin2:Connection = new Connection(this.allPoints[i],this.allPoints[wrap(i+2,divisions+1)],(2*rad*radius),0.03)					   addLink(skin1);					   addLink(skin2);				   }				   for(i = 1; i < (divisions+1)/2; i++){					   var longSpoke:Connection = new Connection(this.allPoints[i],this.allPoints[wrap(i+divisions/2,divisions+1)],2*radius,0.02);					   addLink(longSpoke);				   }			}		}		private function wrap(n,max){			if (n < max){				return n;			}			else {				return n-max+1;			}		}	}}